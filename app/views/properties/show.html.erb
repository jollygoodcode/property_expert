<p>
  <strong>Name:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @property.description %>
</p>

<p>
  <strong>Type:</strong>
  <%= @property.property_type %>
</p>

<div class="row">
  <% if @property.photo_1.present? %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <%= image_tag @property.photo_1.url(:medium) %>
      </div>
    </div>
  <% end %>

  <% if @property.photo_2.present? %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <%= image_tag @property.photo_2.url(:medium) %>
      </div>
    </div>
  <% end %>

  <% if @property.photo_3.present? %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <%= image_tag @property.photo_3.url(:medium) %>
      </div>
    </div>
  <% end %>
</div>

<p><%= link_to 'Back', properties_path %></p>
